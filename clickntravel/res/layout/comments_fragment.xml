<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.63" >

            <TableRow
                android:layout_marginTop="5dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/food_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_rating_text"
                    android:textColor="#0C81C7"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="0dp"
                android:weightSum="1" >

                <RatingBar
                    android:id="@+id/food_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/kindness_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kindness_rating_text"
                    android:textColor="#0C81C7"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <RatingBar
                    android:id="@+id/kindness_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/punctuality_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/punctuality_rating_text"
                    android:textColor="#0C81C7"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <RatingBar
                    android:id="@+id/punctuality_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/millage_program_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/millage_program_rating_text"
                    android:textColor="#0C81C7"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <RatingBar
                    android:id="@+id/millage_program_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/comfort_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comfort_rating_text"
                    android:textColor="#0C81C7"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <RatingBar
                    android:id="@+id/comfort_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/price_quality_relation_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_quality_relation_rating_text"
                    android:textColor="#0C81C7"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <RatingBar
                    android:id="@+id/price_quality_relation_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:numStars="5" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/recommend_switch_text"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/recommend_switch_text"
                        android:layout_marginTop="5dp"
                        android:textColor="#0C81C7"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/yes_no_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="0dp"
                        android:textOff="@string/no"
                        android:textOn="@string/yes" />

                </LinearLayout>
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="@string/comment_text"
                    android:inputType="textMultiLine" >
                </EditText>

            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>