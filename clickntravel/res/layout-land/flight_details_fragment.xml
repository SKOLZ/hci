<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.63" >

            <TableRow android:layout_marginTop="0dp" >

                <ImageView
                    android:id="@+id/airline_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>
            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/flight_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="#666" />
            </TableRow>

            <TableRow
                android:layout_marginTop="2dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/flight_number"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flight_number"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow
                android:layout_marginTop="0dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/flight_number_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/departure_city"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure_city"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/departure_city_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/arrival_city"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arrival_city"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/arrival_city_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/departure_airport_terminal"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure_airport_terminal"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/departure_airport_terminal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/arrival_airport_terminal"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arrival_airport_terminal"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/arrival_airport_terminal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/departure_airport_gate"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure_airport_gate"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/departure_airport_gate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/arrival_airport_gate"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arrival_airport_gate"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/arrival_airport_gate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/departure_scheduled_time"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure_scheduled_time"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/departure_scheduled_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/arrival_scheduled_time"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arrival_scheduled_time"
                    android:textColor="#0C81C7" />
            </TableRow>

            <TableRow android:layout_marginTop="0dp" >

                <TextView
                    android:id="@+id/arrival_scheduled_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>